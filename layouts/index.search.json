{{- $s := newScratch }}
{{- $s.Add "search" slice }}
{{- range where site.RegularPages "Section" "blog" }}
  {{- $s.Add
    "search"
    (dict
      "uri"         .RelPermalink
      "date"        (.Date.Format "Jan 2, 2006")
      "title"       .Title
      "linkTitle"   .LinkTitle
      "description" .Description
      "keywords"    .Keywords
      "tags"        (.Params.tags)
      "content"     (.Plain | htmlUnescape)
    )
  }}
{{- end }}
{{- $s.Get "search" | jsonify }}
